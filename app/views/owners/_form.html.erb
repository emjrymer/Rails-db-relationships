<%= form_with model: @owner, local: true do |form| %>

<% if @owner.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@owner.errors.count, 'error') %>
    prohibited this dog owner from being saved.
  </h2>
  <ul>
    <% @owner.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
  <%= form.label :name %><br>
  <%= form.text_field :name %>
</p>

<p>
  <%= form.label :profession %><br>
  <%= form.text_field :profession %>
</p>

<p>
  <%= form.submit %>
</p>
<% end %>
